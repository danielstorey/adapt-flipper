{{import_globals}}
<div class="flipper-inner component-inner">
	{{> component this}}
	<div class="flipper-widget component-widget">
		<div class="flipper-container">
			<div class="flipper">
				{{#each _items}}
					<div class="flipper-item nth-child-{{@index}} state-0">
						{{#if title}}<div class="flipper-item-title" tabindex="-1">{{{title}}}</div>{{/if}}
						{{#if body}}<div class="flipper-item-body" tabindex="-1">{{{body}}}</div>{{/if}}
						{{#if _graphic}}
							{{#if _graphic.src}}<img class="flipper-item-img" src="{{_graphic.src}}" alt="{{_graphic.alt}}" tabindex="-1">{{/if}}
						{{/if}}
						{{#if instruction}}<div class="flipper-item-instruction">{{{instruction}}}</div>{{/if}}
					</div>
				{{/each}}
			</div>
		</div>
        <button class="flipper-button" aria-label="{{_globals._components._flipper.flipperButton}}"></button>
	</div>
</div>
